<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Please fill in your details"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#8A0707" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:hint="Last Name" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText1"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignLeft="@+id/textView1"
        android:ems="10"
        android:hint="First Name" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText2"
        android:layout_below="@+id/editText2"
        android:ems="10"
        android:hint="Address Line 2" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText5"
        android:layout_alignBottom="@+id/editText5"
        android:layout_alignRight="@+id/editText4"
        android:ems="10"
        android:hint="Pin Code" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText4"
        android:layout_toLeftOf="@+id/editText1"
        android:ems="10"
        android:hint="City" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText5"
        android:layout_below="@+id/editText6"
        android:ems="10"
        android:hint="State" />
   <!--detail>
    <resources>
	    <string-array name="bloodGroups_array">
	        <item>O</item>
	        <item>A</item>
	        <item>B</item>
	        <item>AB</item>
	    </string-array>
		</resources>
	</detail-->

    <EditText
        android:id="@+id/editText8"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText3"
        android:layout_below="@+id/editText3"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Age" />

	<RadioGroup
	    android:id="@+id/radioGroup1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/editText2"
	    android:layout_centerHorizontal="true"
	    android:orientation="horizontal" >

	<RadioButton
	    android:id="@+id/radioButton1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/editText2"
	    android:layout_alignLeft="@+id/editText6"
	    android:text="Male" />

	<RadioButton
	    android:id="@+id/radioButton2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Female" />

	</RadioGroup>

	<EditText
	    android:id="@+id/editText2"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@+id/editText7"
	    android:layout_below="@+id/editText8"
	    android:layout_marginTop="124dp"
	    android:ems="10"
	    android:hint="Address Line 1" />

	<EditText
	    android:id="@+id/editText9"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/editText8"
	    android:layout_below="@+id/editText8"
	    android:layout_marginTop="20dp"
	    android:ems="10"
	    android:hint="Primary Contact Number"
	    android:inputType="phone" />

	<Spinner
	    android:id="@+id/bloodGroups"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/selGroup"
	    android:layout_alignLeft="@+id/editText5"
	    android:hint="Blood Group" />
	
	<!--detail>
	<TextView
        android:id="@+id/selGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bloodGroups"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" />
     </detail-->

	<TextView
	    android:id="@+id/selGroup"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_toRightOf="@+id/editText3" />

	<TextView
	    android:id="@+id/textView2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/editText9"
	    android:layout_below="@+id/editText9"
	    android:text="Blood Group: "
	    android:textAppearance="?android:attr/textAppearanceSmall" />

	<Button
	    android:id="@+id/button1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:text="Register" />

</RelativeLayout>
